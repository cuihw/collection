<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background2"
    tools:context=".activity.AddCollectionActivity">

    <com.data.collection.view.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        title:IconLeft="@mipmap/top_back"
        title:TitleText="数据采集">

    </com.data.collection.view.TitleView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout"
        android:layout_below="@+id/title_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_padding_small"
                android:background="@drawable/round_background"
                android:padding="@dimen/item_padding_small">

                <LinearLayout
                    android:layout_marginTop="@dimen/item_padding"
                    android:id="@+id/type_option_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/type_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:text="请选择类型：" />

                    <Spinner
                        android:id="@+id/type_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name">
                    </Spinner>
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@+id/type_option_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="采集点名称："
                        />
                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="@dimen/item_padding"
                        android:textColor="@color/font1"
                        android:hint="请输入采集点名称" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_padding_small"
                android:background="@drawable/round_background"
                android:orientation="vertical"
                android:padding="@dimen/item_padding_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/longitude_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/item_padding"
                        android:layout_weight="3"
                        android:lines="2"
                        android:text="经度：\n114.564565645656456564565645656456" />
                    <TextView
                        android:id="@+id/laititude_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/item_padding"
                        android:layout_weight="3"
                        android:lines="2"
                        android:text="纬度：\n44.56456" />

                    <TextView
                        android:id="@+id/altitude_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/item_padding"
                        android:layout_weight="4"
                        android:lines="2"
                        android:text="高度：\n128m" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/item_padding"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="采集时间：" />
                    <TextView
                        android:id="@+id/time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019-05-22 12:22:55" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/comments_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/item_padding"
                        android:text="备注:" />

                    <EditText
                        android:id="@+id/comments_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/comments_label"
                        android:background="@color/background1"
                        android:singleLine="true"
                        android:textColor="@color/font1"
                        android:hint="请填写备注信息" />
                </RelativeLayout>
            </LinearLayout>

            <!-- 属性hold space -->
            <LinearLayout
                android:id="@+id/attribution_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_padding_small"
                android:background="@drawable/round_background_10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font3"
                    android:gravity="center"
                    android:text="采集属性"
                    android:padding="@dimen/item_padding"
                    android:background="@drawable/round_top_background3"
                    />
                <LinearLayout
                    android:id="@+id/attribution_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>

            <com.data.collection.view.NoScrollGridView
                android:id="@+id/grid_view"
                android:background="@drawable/round_background_10dp"
                android:padding="@dimen/item_padding"
                android:layout_margin="@dimen/item_padding_small"
                android:numColumns="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.data.collection.view.NoScrollGridView>

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/background6"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/reset_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_padding_small"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="@dimen/item_padding_largest">

            <ImageView
                android:layout_width="@dimen/photo_size"
                android:layout_height="@dimen/photo_size"
                android:src="@mipmap/ic_menu_revert" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重置"
                android:textColor="@color/font4"
                android:textSize="@dimen/font4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/save_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_padding_small"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/item_padding_largest">

            <ImageView
                android:layout_width="@dimen/photo_size"
                android:layout_height="@dimen/photo_size"
                android:src="@mipmap/icon_download" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存"
                android:textColor="@color/font4"
                android:textSize="@dimen/font4" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
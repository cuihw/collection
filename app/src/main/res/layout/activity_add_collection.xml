<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background2"
    tools:context=".activity.AddCollectionActivity">

    <com.data.collection.view.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        title:IconLeft="@mipmap/top_back"
        title:TitleText="数据采集"></com.data.collection.view.TitleView>

    <ScrollView
        android:layout_below="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_padding_small"
                android:background="@drawable/round_top_background1"
                android:padding="@dimen/item_padding_small">

                <ImageView
                    android:id="@+id/icon_type"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@mipmap/tab_home_selected" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/icon_type"
                    android:background="@color/background1"
                    android:gravity="center"
                    android:hint="请输入采集点名称" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_padding_small"
                android:background="@drawable/round_background_10dp"
                android:orientation="vertical"
                android:padding="@dimen/item_padding_small">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/item_padding"
                    android:text="经度：E 114.56456" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/item_padding"
                    android:text="纬度：N 44.56456" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/item_padding"
                    android:text="高度：128m" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/item_padding"
                    android:text="采集时间：2019-05-22 12:22:55" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/comments_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/item_padding"
                        android:text="备注:" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/comments_label"
                        android:background="@color/background1"
                        android:hint="请填写备注信息" />
                </RelativeLayout>
            </LinearLayout>

            <!-- 属性hold space -->
            <LinearLayout
                android:id="@+id/attribution_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_padding_small"
                android:background="@drawable/round_background_10dp"
                android:padding="@dimen/item_padding_small">

                <ImageView
                    android:layout_width="102dp"
                    android:layout_height="88dp"
                    android:layout_margin="@dimen/item_padding"
                    android:layout_weight="1"
                    android:background="@color/background2"
                    android:src="@mipmap/tab_home" />

                <ImageView
                    android:layout_width="102dp"
                    android:layout_height="88dp"
                    android:layout_margin="@dimen/item_padding"
                    android:layout_weight="1"
                    android:background="@color/background2"
                    android:src="@mipmap/tab_home" />

                <ImageView
                    android:layout_width="102dp"
                    android:layout_height="88dp"
                    android:layout_margin="@dimen/item_padding"
                    android:layout_weight="1"
                    android:background="@color/background2"
                    android:src="@mipmap/tab_home" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
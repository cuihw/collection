<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/ckey_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/font4"
            android:layout_marginLeft="@dimen/item_padding"
            android:text="请选择" />
        <TextView
            android:id="@+id/ckey"
            android:layout_toRightOf="@+id/ckey_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/item_padding"
            android:padding="@dimen/item_padding"
            android:layout_centerVertical="true"
            android:textSize="@dimen/font4"
            android:text="属性" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ckey"
            android:hint="选择" />
    </RelativeLayout>

</LinearLayout>



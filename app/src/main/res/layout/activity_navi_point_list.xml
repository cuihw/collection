<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1"
    >
    <com.data.collection.view.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        title:TitleText="导航点列表"
        title:IconLeft="@mipmap/top_back"
        />
    <LinearLayout
        android:layout_below="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/background5"
            android:layout_weight="2"
            >
            <ListView
                android:id="@+id/listview_parent"
                android:layout_width="match_parent"
                android:divider="@null"
                android:layout_height="wrap_content">
            </ListView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background6"
            >
            <ListView
                android:id="@+id/listview_child"
                android:layout_margin="@dimen/item_padding"
                android:dividerHeight="@dimen/item_padding_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>
        </RelativeLayout>
    </LinearLayout>




</RelativeLayout>

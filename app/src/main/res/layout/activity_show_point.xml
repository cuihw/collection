<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background2"
    tools:context=".activity.AddCollectionActivity">

    <com.data.collection.view.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        title:IconLeft="@mipmap/top_back"
        title:TitleText="数据采集">

    </com.data.collection.view.TitleView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout"
        android:layout_below="@+id/title_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_padding_small"
                android:background="@drawable/round_top_background1"
                android:padding="@dimen/item_padding_small">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/item_padding"
                    android:background="@color/background1"
                    android:hint="请输入采集点名称" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/type_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:text="选择采集类型" />

                    <Spinner
                        android:id="@+id/type_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name">
                    </Spinner>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_padding_small"
                android:background="@drawable/round_background_10dp"
                android:orientation="vertical"
                android:padding="@dimen/item_padding_small">

                <TextView
                    android:id="@+id/longitude_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/item_padding"
                    android:text="经度：E 114.56456" />

                <TextView
                    android:id="@+id/laititude_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/item_padding"
                    android:text="纬度：N 44.56456" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background2" />

                <TextView
                    android:id="@+id/altitude_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/item_padding"
                    android:text="高度：128m" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background2" />

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/item_padding"
                    android:text="采集时间：2019-05-22 12:22:55" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/comments_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/item_padding"
                        android:text="备注:" />

                    <EditText
                        android:id="@+id/comments_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/comments_label"
                        android:background="@color/background1"
                        android:singleLine="true"
                        android:hint="请填写备注信息" />
                </RelativeLayout>
            </LinearLayout>

            <!-- 属性hold space -->
            <LinearLayout
                android:id="@+id/attribution_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_padding_small"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_padding_small"
                android:background="@drawable/round_background_10dp"
                android:padding="@dimen/item_padding_small">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="102dp"
                        android:layout_height="88dp"
                        android:layout_margin="@dimen/item_padding"
                        android:background="@color/background2"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/icon_add_pic" />

                    <ImageView
                        android:id="@+id/delete_image1"
                        android:layout_width="@dimen/point_flag_size"
                        android:layout_height="@dimen/point_flag_size"
                        android:layout_alignTop="@+id/image1"
                        android:layout_alignRight="@+id/image1"
                        android:src="@mipmap/icon_close" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="102dp"
                        android:layout_height="88dp"
                        android:layout_margin="@dimen/item_padding"
                        android:background="@color/background2"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/icon_add_pic" />
                    <ImageView
                        android:id="@+id/delete_image2"
                        android:layout_width="@dimen/point_flag_size"
                        android:layout_height="@dimen/point_flag_size"
                        android:layout_alignTop="@+id/image2"
                        android:layout_alignRight="@+id/image2"
                        android:src="@mipmap/icon_close" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="102dp"
                        android:layout_height="88dp"
                        android:layout_margin="@dimen/item_padding"
                        android:background="@color/background2"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/icon_add_pic" />

                    <ImageView
                        android:id="@+id/delete_image3"
                        android:layout_width="@dimen/point_flag_size"
                        android:layout_height="@dimen/point_flag_size"
                        android:layout_alignTop="@+id/image3"
                        android:layout_alignRight="@+id/image3"
                        android:src="@mipmap/icon_close" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/background6"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/reset_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_padding_small"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="@dimen/item_padding_largest">

            <ImageView
                android:layout_width="@dimen/photo_size"
                android:layout_height="@dimen/photo_size"
                android:src="@mipmap/icon_camera" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍照"
                android:textColor="@color/font4"
                android:textSize="@dimen/font4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/save_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_padding_small"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/item_padding_largest">

            <ImageView
                android:layout_width="@dimen/photo_size"
                android:layout_height="@dimen/photo_size"
                android:src="@mipmap/icon_download" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存"
                android:textColor="@color/font4"
                android:textSize="@dimen/font4" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
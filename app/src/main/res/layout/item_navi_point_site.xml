<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_background"
    android:layout_margin="@dimen/item_padding_large"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="郑州站"
            android:textSize="@dimen/font2"
            android:textColor="@color/font1"
            android:padding="@dimen/item_padding"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/item_padding_small"
            />
        <ImageView
            android:id="@+id/icon_navi"
            android:layout_width="@dimen/title_image"
            android:layout_height="@dimen/title_image"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_point_navi"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/item_padding_largest"
            android:padding="@dimen/item_padding_small"
            />
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_padding"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_top_background2"
        android:padding="@dimen/item_padding"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/title_image"
            android:layout_height="@dimen/title_image"
            android:src="@mipmap/tab_home_selected"
            />
        <TextView
            android:id="@+id/type_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="采集类型：线杆"
            android:textSize="@dimen/font2" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background1"
        android:orientation="horizontal"
        android:padding="@dimen/item_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选项属性:"
            android:layout_weight="2"
            android:textSize="@dimen/font1" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="材质：【混凝土，木头，铁杆，混凝土，木头，铁杆】"
            android:layout_weight="1"
            android:textSize="@dimen/font1" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/round_background2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_bottom_background1"
        android:orientation="horizontal"
        android:padding="@dimen/item_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="填写属性："
            android:layout_weight="2"
            android:textSize="@dimen/font1" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="高度，粗细"
            android:layout_weight="1"
            android:textSize="@dimen/font1" />
    </LinearLayout>
</LinearLayout>
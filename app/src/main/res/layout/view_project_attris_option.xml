<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <View
        android:id="@+id/divider_top"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/font2"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ckey_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/item_padding"
            android:gravity="right"
            android:text="输水管线"
            android:textColor="@color/font1"
            android:textSize="@dimen/font2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_padding"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ckey_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_padding"
                android:singleLine="true"
                android:textColor="@color/font1"
                android:textSize="@dimen/font4"
                android:text="选择属性，默认值：35号线" />

            <TextView
                android:id="@+id/ckey_values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_padding"
                android:textSize="@dimen/font4"
                android:textColor="@color/font1"
                android:text="[34号线，35号线, 36号线]" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/font2"></View>
</LinearLayout>


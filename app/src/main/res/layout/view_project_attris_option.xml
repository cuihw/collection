<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ckey_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/item_padding"
        android:gravity="right"
        android:textSize="@dimen/font2"
        android:textColor="@color/font1"
        android:text="输水管线" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ckey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/item_padding"
            android:padding="@dimen/item_padding"
            android:text="选择属性，默认值：35" />
        <TextView
            android:id="@+id/ckey_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/item_padding"
            android:padding="@dimen/item_padding"
            android:text="[34号线，35号线, 36号线]" />
    </LinearLayout>
</LinearLayout>


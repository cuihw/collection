<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/item_padding"
    >
    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/flag_image"
            android:layout_width="@dimen/point_flag_size"
            android:layout_height="@dimen/point_flag_size"
            android:src="@mipmap/tab_home_selected"
            />

        <TextView
            android:id="@+id/name"
            android:layout_toRightOf="@+id/flag_image"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="大学科技园"
            android:textSize="@dimen/font3"
            android:textColor="@color/font1"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/altitude_info"
            android:layout_toRightOf="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高度：183.56M"
            android:textSize="@dimen/font5"
            android:textColor="@color/font2"
            android:paddingLeft="@dimen/item_padding"
            android:paddingTop="3dp"
            />
        <TextView
            android:layout_marginTop="@dimen/item_padding"
            android:id="@+id/location_info"
            android:layout_below="@+id/flag_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E 113.600406,   N 34.778768"
            android:textSize="@dimen/font5"
            android:textColor="@color/font2"
            />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flag_image"
            android:layout_toRightOf="@+id/location_info"
            android:textSize="@dimen/font5"
            android:textColor="@color/font2"
            android:paddingLeft="@dimen/item_padding"
            android:visibility="gone"
            android:text="采集时间 2019-05-10 12:00:03"/>
    </RelativeLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/tab_navigation_selected"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/item_padding_large"
        />
</RelativeLayout>
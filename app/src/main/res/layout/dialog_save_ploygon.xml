<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_background"
        android:padding="@dimen/item_padding"
        android:layout_marginRight="@dimen/item_padding"
        android:layout_marginLeft="@dimen/item_padding"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存测量结果"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/font2"
            android:layout_marginTop="@dimen/item_padding"
            android:textColor="@color/font1"
            />
        <LinearLayout
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:stretchColumns="1"
                android:layout_margin="@dimen/item_padding_largest"
                >
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保存名字: "
                        style="@style/mytext1"
                        />
                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备        注: "
                        style="@style/mytext1"
                        />
                    <EditText
                        android:id="@+id/comments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/item_padding_small"
                    android:paddingBottom="@dimen/item_padding_small"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="测量类型: "
                        style="@style/mytext1"
                        />
                    <TextView
                        android:id="@+id/type_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="面积测量"
                        style="@style/mytext1"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/item_padding_small"
                    android:paddingBottom="@dimen/item_padding_small"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="测量顶点数: "
                        style="@style/mytext1"
                        />
                    <TextView
                        android:id="@+id/points_num_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6"
                        style="@style/mytext1"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/item_padding_small"
                    android:paddingBottom="@dimen/item_padding_small"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="测量结果: "
                        style="@style/mytext1"
                        />
                    <TextView
                        android:id="@+id/result_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5 平方米"
                        style="@style/mytext1"
                        />
                </TableRow>

            </TableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F5F5F5" />
            <LinearLayout
                android:id="@+id/common_dialog_bottom_ll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cancel_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="#0679FE"
                    android:textSize="18dp"
                    tools:text="取消" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#F5F5F5" />

                <TextView
                    android:id="@+id/confirm_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="#0679FE"
                    android:textSize="18dp"
                    tools:text="保存" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_padding" >
    <ImageView
        android:id="@+id/icon_type"
        android:layout_width="@dimen/home_button"
        android:layout_height="@dimen/home_button"
        android:src="@mipmap/icon_tree"
        android:layout_centerVertical="true"
        />

    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_toRightOf="@+id/icon_type"
        android:layout_toLeftOf="@+id/upload_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="采集名称"
            android:padding="@dimen/item_padding"
            android:textSize="@dimen/font3"
            android:layout_weight="1"
            android:textColor="@color/font1"
            />

        <TextView
            android:id="@+id/type_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="类型"
            android:textSize="@dimen/font5"
            android:layout_weight="2"
            android:gravity="right"
            android:paddingRight="@dimen/item_padding"
            />
    </LinearLayout>

    <TextView
        android:layout_toRightOf="@+id/icon_type"
        android:id="@+id/is_uploaded"
        android:layout_below="@+id/name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已上传"
        android:layout_marginLeft="@dimen/item_padding"
        android:textSize="@dimen/font8"
        android:textColor="@color/font0"
        />
    <TextView
        android:layout_toRightOf="@+id/icon_type"
        android:id="@+id/location"
        android:layout_below="@+id/is_uploaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="经度：114.45645123"
        android:layout_marginLeft="@dimen/item_padding"
        android:textSize="@dimen/font8"
        />
    <TextView
        android:layout_toRightOf="@+id/icon_type"
        android:id="@+id/time"
        android:layout_below="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="采集时间： 2019-06-03 12:32:65"
        android:layout_marginLeft="@dimen/item_padding"
        android:layout_marginBottom="@dimen/item_padding"
        android:textSize="@dimen/font5"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上报人:abc"
        android:layout_alignTop="@+id/time"
        android:layout_toLeftOf="@+id/upload_tv"
        />
    <TextView
        android:id="@+id/upload_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_background3"
        android:text="上传"
        android:layout_alignParentRight="true"
        android:padding="@dimen/item_padding"
        android:layout_centerVertical="true"
        android:gravity="center"
        />
</RelativeLayout>
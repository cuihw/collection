<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_padding" >
    <ImageView
        android:id="@+id/icon_type"
        android:layout_width="@dimen/type_icon"
        android:layout_height="@dimen/type_icon"
        android:src="@mipmap/icon_tree"
        android:layout_margin="@dimen/item_padding"
        />

    <TextView
        android:id="@+id/location"
        android:layout_below="@+id/icon_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="经度：114.45645123"
        android:layout_marginLeft="@dimen/item_padding"
        />


    <TextView
        android:id="@+id/time"
        android:layout_below="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="采集时间： 2019-06-03 12:32:65"
        android:layout_marginLeft="@dimen/item_padding"
        android:textSize="@dimen/font5"
        android:layout_marginBottom="@dimen/item_padding_small"
        />

    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_toRightOf="@+id/icon_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_toLeftOf="@+id/icon_navi"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="采集名称"
            android:padding="@dimen/item_padding"
            android:textSize="@dimen/font3"
            android:textColor="@color/font1"
            android:layout_toRightOf="@+id/icon_type"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上报人:"
            android:paddingLeft="@dimen/item_padding"
            />
        <TextView
            android:id="@+id/report_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abc"
            android:paddingLeft="@dimen/item_padding"
            />

        <TextView
            android:id="@+id/is_uploaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已上传"
            android:textColor="@color/font0"
            android:layout_marginLeft="@dimen/item_padding"
            android:layout_toRightOf="@+id/report_tv"
            android:layout_alignTop="@+id/report_tv"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/icon_navi"
        android:layout_width="@dimen/home_button"
        android:layout_height="@dimen/home_button"
        android:layout_alignParentRight="true"
        android:src="@mipmap/icon_point_navi"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/item_padding"
        android:padding="5dp"
        android:visibility="gone"
        />
</RelativeLayout>
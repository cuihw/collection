<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background3"
    android:layout_margin="@dimen/item_padding" >
    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="采集点名字"
            android:padding="@dimen/item_padding"
            android:textSize="@dimen/font3"
            />
        <ImageView
            android:id="@+id/icon_type"
            android:layout_width="@dimen/title_image"
            android:layout_height="@dimen/title_image"
            android:src="@mipmap/icon_tree"
            />
        <TextView
            android:id="@+id/type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="采集点类型"
            android:textSize="@dimen/font5"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/location"
        android:layout_below="@+id/name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="114.45645123   34.45645123"
        android:layout_marginLeft="@dimen/item_padding"
        />

    <TextView
        android:id="@+id/time"
        android:layout_below="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="采集时间： 2019-06-03 12:32:65"
        android:layout_marginLeft="@dimen/item_padding"
        android:layout_marginBottom="@dimen/item_padding"
        />
    <TextView
        android:id="@+id/upload_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_background"
        android:text="上传"
        android:padding="@dimen/item_padding"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/item_padding"
        />
</RelativeLayout>
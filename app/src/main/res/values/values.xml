<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="JPTabBar">
        <attr format="reference|color" name="TabNormalColor"/>
        <attr format="reference|color" name="TabSelectColor"/>
        <attr format="reference|color" name="TabSelectBg"/>
        <attr format="dimension|reference" name="TabTextSize"/>
        <attr format="string" name="TabTypeface"/>
        <attr format="dimension|reference" name="TabIconSize"/>
        <attr format="boolean" name="TabIconFilter"/>
        <attr format="dimension|reference" name="TabMargin"/>
        <attr format="enum" name="TabAnimate">
            <enum name="Flip" value="0"/>
            <enum name="Rotate" value="1"/>
            <enum name="Scale" value="2"/>
            <enum name="Jump" value="3"/>
            <enum name="Scale2" value="4"/>
            <enum name="None" value="5"/>
        </attr>
        <attr format="boolean" name="TabPressAnimateEnable"/>
        <attr format="boolean" name="TabPageAnimateEnable"/>
        <attr format="boolean" name="TabGradientEnable"/>
        <attr format="dimension|reference" name="TabMiddleBottomDis"/>
        <attr format="reference" name="TabMiddleView"/>
        <attr format="dimension|reference" name="TabMiddleHMargin"/>
        <attr format="reference|color" name="BadgeColor"/>
        <attr format="dimension|reference" name="BadgePadding"/>
        <attr format="reference|dimension" name="BadgeTextSize"/>
        <attr format="reference|dimension" name="BadgeVerticalMargin"/>
        <attr format="reference|dimension" name="BadgeHorizonalMargin"/>
    </declare-styleable>


    <declare-styleable name="TitleView">
        <attr name="TitleText" format="string" />
        <attr name="IconLeft" format="reference" />
        <attr name="IconRight" format="reference" />
    </declare-styleable>

</resources>